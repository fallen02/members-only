
<div class="w-full flex justify-center pt-16" >
  <div class="w-full max-w-sm p-4 bg-white border border-gray-200 rounded-lg shadow sm:p-6 md:p-8 dark:bg-transparent dark:border-red-700 backdrop-blur-2xl">
    <h5 class="text-xl font-medium text-gray-900 dark:text-white flex justify-center">Create Post</h5>
    <%= form_with model:post, url: posts_path do |f| %>
      <div class="mt-2">
        <%= f.label :title, class:"block mb-2 text-sm font-medium text-gray-900 dark:text-white"%>
        <%= f.text_field :title, autofocus: true, placeholder: "Enter title of post", autocomplete: "false", class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-transparent dark:border-gray-500 dark:placeholder-gray-400 dark:text-white"%>
      </div>
      <div class="mt-2">
        <%= f.label :body, class:"block mb-2 text-sm font-medium text-gray-900 dark:text-white"%>
        <%= f.text_area :body, size: "70x5", class: "block p-2.5 w-full text-sm text-gray-900 bg-transparent rounded-lg border border-gray-300 focus:ring-blue-500 focus:border-blue-500 dark:bg-transparent dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" %>
      </div>
      <div class="mt-2 flex flex-row justify-between ">
        <%= link_to "Cancel", root_path, :class => "focus:outline-none text-white bg-red-700 hover:bg-red-800 focus:ring-4 focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-900" %>
        <%= f.submit "Save", class: "cursor-pointer text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800"%>
      </div>
    <% end %>
  </div>
</div>